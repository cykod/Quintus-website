doctype 5
html
  head
    title= "Quintus JavaScript HTML5 Game Engine"
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/js/codemirror/codemirror.css')
    link(rel='stylesheet', href='/js/highlight/styles/github.css')
    meta(name="viewport",content="width=device-width, user-scalable=0, minimum-scale=1.0, maximum-scale=1.0")
    
    link(rel="icon",type="image/x-icon",href="/favicon.ico")
    link(rel="shortcut icon",type="image/x-icon",href="/favicon.ico")

  body
    header#site-header
      #title-game
      .cannon.cannon-left
      .cannon.cannon-right
      section#site-top
        h1
          a(href="#")
            span Q
            | uintus
        nav#site-nav
          - var page = page || "documentation"
          ul
            li(class=((page == 'home') ? "selected" : ""))
              a(href="/") home
            li(class=((page == 'documentation') ? "selected" : ""))
              a(href="/documentation") docs
            li
              a(href="https://plus.google.com/communities/104292074755089084725") community
            li
              a(href="http://github.com/cykod/Quintus") github
          .clear
      #social
        .addthis_toolbox.addthis_default_style
          a.addthis_button_facebook_like("fb:like:layout"='button_count')
          a.addthis_button_tweet 
        script
          var addthis_config = {"data_track_addressbar":true};
        script(async="true",src="http://s7.addthis.com/js/300/addthis_widget.js#pubid=ra-4e5d96511b13dffd")
    section#leader
      h1
        | Quintus is an easy-to-learn, fun-to-use JavaScript HTML5 game engine
        | for mobile, desktop and beyond!
    block content

    footer#attribution
      a(href="http://cykod.com") 
        | Quintus HTML5 Engine and Site &copy;2012-2013 Cykod LLC
    //script(src="/socket.io/socket.io.js")
    script(src="//ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js")

    // Code Mirror
    script(src="/js/codemirror/codemirror.js")
    script(src="/js/codemirror/mode/xml.js")
    script(src="/js/codemirror/mode/javascript.js")
    script(src="/js/codemirror/mode/css.js")
    script(src="/js/codemirror/mode/htmlmixed.js")

    // Highlight JS
    script(src="/js/highlight/highlight.pack.js")

    // Website
    script(src="/js/quintus-website.js")

    block footer

    script
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-2011791-38']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
